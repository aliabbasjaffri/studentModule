<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content" android:minWidth="800dp"
    android:layout_height="fill_parent" tools:context="SH2.SH2_2"
    android:fillViewport="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="SH2.SH2_2"
        android:background="@color/gray">

        <!-- TODO: Update blank fragment layout -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Classes Being Requested"
            android:id="@+id/sh2_2RCBRButton"
            android:drawableRight="@drawable/select_arrow"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left|fill_vertical"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial Classes being Requested"
            android:id="@+id/sh2_2TCBRButton"
            android:drawableRight="@drawable/select_arrow"
            android:background="@color/white"
            android:layout_below="@+id/sh2_2RCBRButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left|fill_vertical"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked Classes"
            android:id="@+id/sh2_2BookedClassesButton"
            android:drawableRight="@drawable/select_arrow"
            android:background="@color/white"
            android:layout_below="@+id/sh2_2TCBRButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left|fill_vertical"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Classes"
            android:id="@+id/sh2_2CompletedClassesButton"
            android:drawableRight="@drawable/select_arrow"
            android:background="@color/white"
            android:layout_below="@+id/sh2_2BookedClassesButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="left|fill_vertical"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Request Class"
            android:id="@+id/sh2_2RequestClassButton"
            android:background="@drawable/circular_button_purple"
            android:layout_below="@+id/sh2_2CompletedClassesButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white" />
    </RelativeLayout>

</ScrollView>