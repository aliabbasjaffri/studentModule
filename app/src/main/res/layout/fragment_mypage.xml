<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorCardImageView"
        android:background="@drawable/tutor_card"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/tutorCardButton"
        android:background="@drawable/tutor_card_arrow"
        android:layout_alignBottom="@+id/tutorCardImageView"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/videoView"
        android:layout_alignEnd="@+id/videoView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView11"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@+id/tutorCardButton"
        android:layout_alignBottom="@+id/tutorCardButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView12"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tutorCardButton"
        android:layout_toRightOf="@+id/tutorCardIconImageView"
        android:layout_toEndOf="@+id/tutorCardIconImageView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/tutorCardIconImageView"
        android:layout_alignTop="@+id/textView12"
        android:src="@drawable/tutor_card_icon"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/tutorCardImageView"
        android:layout_alignStart="@+id/tutorCardImageView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_below="@+id/textView12"
        android:layout_above="@+id/textView11"
        android:layout_alignRight="@+id/tutorCardImageView"
        android:layout_alignEnd="@+id/tutorCardImageView"
        android:layout_alignLeft="@+id/tutorCardImageView"
        android:layout_alignStart="@+id/tutorCardImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/videoPlayButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/video_button" />

</RelativeLayout>