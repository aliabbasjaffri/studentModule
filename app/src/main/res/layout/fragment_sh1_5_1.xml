<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="SH1.SH1_5_1"
    android:background="@color/gray">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/layout_sh1_5_custom_row" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/fragmentSH1_5_1Row" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView13"
        android:layout_below="@+id/fragmentSH1_5_1Row"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:minLines="3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sh1_5_1view"
        android:background="@color/backgroundcolor"
        android:layout_below="@+id/textView13"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sh1_5_1RatingBar"
        android:progressDrawable="@drawable/custom_ratingbar_selector"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/sh1_5_1view"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sh1_5_1ListView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sh1_5_1ListView"
        android:layout_below="@+id/sh1_5_1view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
