<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:minWidth="800dp"
    android:layout_height="fill_parent" tools:context="SH04.SH04_1"
    android:fillViewport="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="SH04.SH04_1"
        android:background="@color/gray">

        <!-- TODO: Update blank fragment layout -->

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_above="@+id/sh04_1RatingBar" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:maxLength="100"
            android:id="@+id/sh04_1ReviewEditText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minLines="4"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="띄어쓰기 포함 100자 이내. 욕설이나 비속어, 무의미한 내용은 삭제되고 1달간 무료수업을 듣지 못하게 됩니다."
            android:id="@+id/textView20"
            android:layout_below="@+id/sh04_1ReviewEditText"
            android:layout_alignLeft="@+id/sh04_1ReviewEditText"
            android:layout_alignStart="@+id/sh04_1ReviewEditText"
            android:layout_alignRight="@+id/sh04_1ReviewEditText"
            android:layout_alignEnd="@+id/sh04_1ReviewEditText"
            android:minLines="2"
            android:textColor="@color/sunday" />
        />

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/textView20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@color/weekdaycolor"
            android:id="@+id/view8" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/sh04_1ConfirmButton"
            android:layout_below="@+id/view8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/circular_button_purple"
            android:textColor="@color/white" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sh04_1RatingBar"
            android:progressDrawable="@drawable/custom_ratingbar_selector"
            android:numStars="5"
            android:stepSize="1"
            android:layout_alignTop="@+id/view8"
            android:layout_toRightOf="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"
            android:layout_above="@+id/sh04_1ConfirmButton"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rating"
            android:id="@+id/textView21"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignTop="@+id/view8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/view8"
            android:layout_toLeftOf="@+id/sh04_1ConfirmButton"
            android:layout_toStartOf="@+id/sh04_1ConfirmButton" />

    </RelativeLayout>
</ScrollView>