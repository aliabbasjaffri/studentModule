<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content" android:minWidth="800dp"
    android:layout_height="fill_parent" tools:context="SH2.SH2"
    android:fillViewport="true"
    android:focusable="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="SH2.SH2"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/my_point"
                    android:drawableRight="@drawable/select_arrow"
                    android:text="마이 포인트"
                    android:id="@+id/sh2MyPointButton"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="나의 수업"
                    android:id="@+id/sh2MyClassButton"
                    android:drawableLeft="@drawable/my_class"
                    android:drawableRight="@drawable/select_arrow"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:layout_below="@+id/sh2MyPointButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="관심 강사"
                    android:id="@+id/sh2MyTutorButton"
                    android:drawableLeft="@drawable/my_tutor"
                    android:drawableRight="@drawable/select_arrow"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:layout_below="@+id/sh2MyClassButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="나의 레벨"
                    android:id="@+id/sh2MyLevelButton"
                    android:drawableLeft="@drawable/my_level"
                    android:drawableRight="@drawable/select_arrow"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:layout_below="@+id/sh2MyTutorButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

</ScrollView>