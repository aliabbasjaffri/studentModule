<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/sh01TutorImageView"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/sh01TutorNameTextView"
        android:gravity="center_vertical|center_horizontal|left"
        android:paddingLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sh01TutorImageView"
        android:layout_toEndOf="@+id/sh01TutorImageView"
        android:layout_alignBottom="@+id/sh01TutorImageView" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/sh01StatusImageView"
        android:src="@drawable/now_on_texticon"
        android:layout_toLeftOf="@+id/sh01NowOnButton"
        android:layout_toStartOf="@+id/sh01NowOnButton"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/sh01TutorNameTextView"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Online"
        android:id="@+id/sh01StatusTextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/sh01StatusImageView"
        android:layout_alignStart="@+id/sh01StatusImageView"
        android:layout_alignBottom="@+id/sh01StatusImageView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignRight="@+id/sh01StatusImageView"
        android:layout_alignEnd="@+id/sh01StatusImageView" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/sh01NowOnButton"
        android:background="@drawable/now_off"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" />


</RelativeLayout>