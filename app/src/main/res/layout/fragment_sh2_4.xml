<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:minWidth="800dp"
    android:layout_height="match_parent" tools:context="SH2.SH2_4"
    android:fillViewport="true"
    android:focusable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="SH2.SH2_4"
        android:background="@color/backgroundcolor">

        <!-- TODO: Update blank fragment layout -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="나의 레벨은"
            android:id="@+id/textview19"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/sh2_4EnglishLevelTextView"
            android:layout_below="@+id/textview19"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/toolbar" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/sh2_4EnglishLevelSpinner"
            android:layout_marginTop="70dp"
            android:entries="@array/spinnerItems"
            android:layout_below="@+id/sh2_4EnglishLevelTextView"
            android:visibility="invisible"
            android:background="@drawable/circular_button_purple"
            android:layout_alignRight="@+id/sh2_4ModifyLevelButton"
            android:layout_alignEnd="@+id/sh2_4ModifyLevelButton"
            android:layout_alignLeft="@+id/sh2_4ModifyLevelButton"
            android:layout_alignStart="@+id/sh2_4ModifyLevelButton" />

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="레벨 수정"
            android:id="@+id/sh2_4ModifyLevelButton"
            android:background="@drawable/circular_button_purple"
            android:layout_alignTop="@+id/sh2_4EnglishLevelSpinner"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/sh2_4EnglishLevelSpinner" />
    </RelativeLayout>

</ScrollView>