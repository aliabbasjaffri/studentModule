<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="800dp"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <include layout="@layout/toolbar"
            android:id="@+id/signupActivityInclude" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="이름"
            android:id="@+id/textView2"
            android:layout_below="@+id/signupActivityInclude"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="영어레벨"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toStartOf="@+id/englishLevelSpinner"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/englishLevelSpinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="생년월일"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="이메일"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toStartOf="@+id/emailField"
            android:layout_toLeftOf="@+id/emailField"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="휴대폰 번호 "
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toStartOf="@+id/completionButton"
            android:layout_toLeftOf="@+id/completionButton"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="암호"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toStartOf="@+id/phoneNumberField"
            android:layout_toLeftOf="@+id/phoneNumberField"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="암호 재입력"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toLeftOf="@+id/reEnterPasswordField"
            android:layout_toStartOf="@+id/reEnterPasswordField"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Skype ID "
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:background="@color/white"
            android:layout_toLeftOf="@+id/reEnterPasswordField"
            android:layout_toStartOf="@+id/reEnterPasswordField"
            android:layout_marginTop="2dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameField"
            android:layout_above="@+id/textView3"
            android:layout_toRightOf="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_alignTop="@+id/textView2"
            android:hint="이름을 입력하세요"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/view9" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailField"
            android:layout_above="@+id/textView6"
            android:layout_toRightOf="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_alignTop="@+id/textView5"
            android:paddingRight="12dp"
            android:hint="이메일을 입력하세요"
            android:gravity="center_vertical|right"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/view" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumberField"
            android:layout_above="@+id/textView7"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignRight="@+id/emailField"
            android:layout_alignEnd="@+id/emailField"
            android:background="@color/white"
            android:layout_below="@+id/textView5"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:hint="010-0000-0000"
            android:layout_marginTop="2dp"
            android:maxLength="13"
            android:inputType="number"
            android:numeric="integer" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view"
            android:layout_alignTop="@+id/emailField"
            android:layout_alignRight="@+id/view"
            android:layout_alignEnd="@+id/view"
            android:id="@+id/view2" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwordField"
            android:layout_above="@+id/textView8"
            android:layout_toRightOf="@+id/textView6"
            android:layout_alignRight="@+id/phoneNumberField"
            android:layout_alignEnd="@+id/phoneNumberField"
            android:background="@color/white"
            android:layout_below="@+id/textView6"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:hint="암호를 입력하세요"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_below="@+id/textView5"
            android:layout_alignRight="@+id/view2"
            android:layout_alignEnd="@+id/view2"
            android:id="@+id/view3" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reEnterPasswordField"
            android:layout_below="@+id/passwordField"
            android:layout_toRightOf="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_above="@+id/textView9"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:hint="암호를 재입력하세요"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/view3"
            android:layout_alignStart="@+id/view3"
            android:layout_marginRight="15dp"
            android:id="@+id/view4" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skypeIDField"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_below="@+id/textView8"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:hint="Skype ID를 입력하세요"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_alignLeft="@+id/view4"
            android:layout_alignStart="@+id/view4"
            android:layout_below="@+id/textView7"
            android:layout_alignRight="@+id/view4"
            android:layout_alignEnd="@+id/view4"
            android:id="@+id/view5" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/view5"
            android:layout_alignStart="@+id/view5"
            android:layout_alignRight="@+id/view5"
            android:layout_alignEnd="@+id/view5"
            android:id="@+id/view6" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_alignLeft="@+id/view6"
            android:layout_alignStart="@+id/view6"
            android:layout_below="@+id/textView9"
            android:layout_alignRight="@+id/view6"
            android:layout_alignEnd="@+id/view6" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skype 다운로드 "
            android:drawableRight="@drawable/skype_icon"
            android:id="@+id/downloadSkypeButton"
            android:layout_below="@+id/textView9"
            android:layout_alignRight="@+id/skypeIDField"
            android:layout_alignEnd="@+id/skypeIDField"
            android:background="@color/white"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:id="@+id/completionButton"
            android:layout_below="@+id/downloadSkypeButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/circular_button_purple"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/englishLevelSpinner"
            android:layout_above="@+id/textView4"
            android:layout_below="@+id/textView2"
            android:entries="@array/spinnerItems"
            android:background="@color/white"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/textView4"
            android:paddingLeft="135dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthdayField"
            android:layout_toRightOf="@+id/textView4"
            android:layout_alignRight="@+id/englishLevelSpinner"
            android:layout_alignEnd="@+id/englishLevelSpinner"
            android:background="@color/white"
            android:layout_below="@+id/view"
            android:layout_alignBottom="@+id/textView4"
            android:hint="출생 년, 월, 일 - (6자리수)"
            android:gravity="center_vertical|right"
            android:layout_marginTop="2dp"
            android:paddingRight="12dp" />

    </RelativeLayout>

</ScrollView>